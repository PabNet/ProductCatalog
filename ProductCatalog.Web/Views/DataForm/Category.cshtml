@{
    ViewData["Title"] = "Category";
}

@using ProductCatalog.Domain.Models.Core
@model ProductCatalog.Domain.Models.Core.ProductCategory

<link rel="stylesheet" href="~/css/form.css">

<div class="container">
    <h2>Category</h2>
    <form action="/DataForm/Category" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="Name" required autocomplete="off" autofocus value="@Model?.Name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="Description" rows="4">@Model?.Description</textarea>
        </div>
        <button type="submit" class="btn-action">@ViewData["ButtonLabel"]</button>
        <div class="error-label">@ViewData["ErrorMessage"]</div>
        <a href="@Url.Action("Categories", "DataTable")" class="btn-back">Back</a>
        <input type="hidden" name="Id" value="@Model?.Id">
    </form>
</div>
